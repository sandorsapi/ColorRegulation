<Window
	x:Class="ColorOperationsApp.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ColorOperationsApp"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:wiew="clr-namespace:ColorOperationsApp.Views"
	Title="{Binding AppName}"
	Width="1250"
	Height="770"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">
	<Grid
		Width="1242"
		Height="729"
		Margin="10,0,10,10"
		HorizontalAlignment="Center"
		VerticalAlignment="Top">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="300" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<wiew:ColorListView
			Grid.Column="0"
			Margin="10,5,10,10"
			DataContext="{Binding ContentColorListViewModel}" />
		<Grid
			Grid.Column="1"
			Width="922"
			Height="709"
			Margin="0,10,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top">
			<Grid.RowDefinitions>
				<RowDefinition Height="500" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<wiew:ColorPanelView
				Grid.Row="0"
				Margin="10"
				DataContext="{Binding ContentColorPanelViewModel}" />
			<wiew:SlidersView
				Grid.Row="1"
				Height="189"
				Margin="5"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				DataContext="{Binding ContentSlidersViewModel}" />
		</Grid>
	</Grid>
</Window>
